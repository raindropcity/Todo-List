{{!-- modal for Delete --}}
<div
  style="text-align: center; z-index: 2; border-radius: 5px; background-color: rgba(255, 255, 255, 0.5); border:rgba(255, 0, 0, 0.5) solid 3px; width: 40%; padding: 8px;">
  <div style="width: 100%; margin-top: 8px;">
    <h5 style="font-weight: bold;">Are yor sure to delete the Todo :</h5>
    <span style="font-weight: bold;">{{todo.agendas}}</span>
  </div>
  <hr>
  <div style="display: flex; flex-direction: row; justify-content:end; align-items: center; margin: 3px 0px 3px 0px;">
    <form action="/todos/{{ todo._id }}?_method=DELETE" method="POST" style="display: inline-block;">
      <button type="submit" class="btn btn-secondary" style="width: 60px; margin-right: 5px;">Yes</button>
    </form>
    <a class="btn btn-secondary" href="/todos" style="width: 60px;">No</a>
  </div>
</div>